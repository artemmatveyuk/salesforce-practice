{
  "trailingComma": "none",
  "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{trigger,cls}",
      "options": {
        "parser": "apex",
        "tabWidth": 4
      }
    },
    {
      "files": "*.{apex}",
      "options": {
        "parser": "apex-anonymous",
        "tabWidth": 4
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    }
  ]
}
